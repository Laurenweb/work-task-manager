{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/task/index.css') }}"/>
{% endblock %}

{% block title %}
	Liste des tâches
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2 bg-dark text-white p-4 min-vh-100">
				{{ include('task/menu.html.twig', {'categoryByUser' : categoryByUser}) }}
			</div>
			<div class="col-md-10">
                <h1 class="mt-5">Marquer une tâche comme terminée</h1>
                {{ form_start(form) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.actualDuration) }}
                    <button class="btn btn-green" type="submit"><i class="fas fa-check-circle mr-2"></i> Marquer comme effectuée</button>
                {{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
