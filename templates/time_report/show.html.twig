{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ time_report.id }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ time_report.createdAt ? time_report.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ time_report.startingAt ? time_report.startingAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ time_report.endingAt ? time_report.endingAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('time_report_index') }}">Retour à la liste</a>

    <a href="{{ path('time_report_edit', {'id': time_report.id}) }}">Modifier</a>

    {{ include('time_report/_delete_form.html.twig') }}
{% endblock %}
