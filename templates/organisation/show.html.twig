{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <main class="container mt-5">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Manager</th>
                    <td>{{ user.manager ? user.manager.email : 'Aucun' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('organisation_index') }}">Retour à la liste</a>

        <a href="{{ path('organisation_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('organisation/_delete_form.html.twig') }}
    </main>
{% endblock %}
