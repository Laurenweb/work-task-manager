        </tbody>
    </table>

    <a href="{{ path('task_category_edit', {'id': task_category.id}) }}">Modifier</a>

    {{ include('task_category/_delete_form.html.twig') }}

    <a class="mt-5" href="{{ path('task_category_index') }}">Retour à la liste</a>
