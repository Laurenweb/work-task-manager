{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="mt-5">Catégorie de tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task_category.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ task_category.title }}</td>
